@model LoginViewModel

@{
    ViewBag.Title = "Вход";
}

<div class="row">
    <div class="col-md-8">
        <h3>Пожалуйста, войдите в свою учетную запись.</h3>
        <hr />
        <form enctype="multipart/form-data" asp-route-returnurl="@ViewBag.ReturnUrl" asp-controller="account" asp-action="login" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="cal-sm-10">
                    <input asp-for="Email" class=" form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="cal-sm-10">
                    <input asp-for="Password" class=" form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="checkbox"></div>
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Войти </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">

    </div>
</div>
