@model Stock
@{
    ViewBag.Title = "Создать новый коннект к бирже";
}
<form enctype="multipart/form-data" asp-controller="home" asp-action="add" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="cal-sm-10">
            <input asp-for="Name" class=" form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductsAPIStrings[Model.ProductsAPIStrings.Count-1].Description" class="col-sm-2 col-form-label"></label>
        <div class="cal-sm-10">
            <input asp-for="ProductsAPIStrings[Model.ProductsAPIStrings.Count-1].Description" class=" form-control" placeholder="API" />
            <span asp-validation-for="ProductsAPIStrings[Model.ProductsAPIStrings.Count-1].Description" class="text-danger"></span>
        </div>
        <label asp-for="ProductsAPIStrings[Model.ProductsAPIStrings.Count-1].Name" class="col-sm-2 col-form-label"></label>
        <div class="cal-sm-10">
            <input asp-for="ProductsAPIStrings[Model.ProductsAPIStrings.Count-1].Name" class=" form-control" placeholder="API" />
            <span asp-validation-for="ProductsAPIStrings[Model.ProductsAPIStrings.Count-1].Name" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger">

    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Добавить конект</button>
        </div>
    </div>
   
</form>

