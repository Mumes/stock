@model AddStockConnectionViewModel

@{
    ViewBag.Title = "Подключить биржу";
}

<div class="row">
    <div class="col-md-8">
        <h3>Введите данные биржи.</h3>
        <hr />
        <form enctype="multipart/form-data" asp-route-returnurl="@ViewBag.ReturnUrl" asp-controller="home" asp-action="addstockconection" method="post" class="mt-3">
            
            <div class="form-group row">
                <label asp-for="Login" class="col-sm-2 col-form-label"></label>
                <div class="cal-sm-10">
                    <input asp-for="Login" class=" form-control" placeholder="Login" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="cal-sm-10">
                    <input asp-for="Password" class=" form-control" placeholder="Password" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Подключить </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">

    </div>
</div>
